<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="@UserName" Label="User Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(new UserDetails(UserName)));
    }

    void Cancel() => MudDialog.Cancel();
}
